<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_500">

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="doFinish"
            android:src="@mipmap/info_bac" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="REPORT SUBMITTED"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Congrats!"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="The report has been submitted."
        android:textColor="@color/teal_700"
        android:textSize="18sp"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:layout_width="200dp"
        app:cardBackgroundColor="#fff"
        android:layout_height="200dp">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Long press to copy your ticket number:"
                android:textAlignment="center"
                android:textColor="#18383C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/reporttext"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
    <TextView
        android:onClick="doFinish"
        android:textSize="18sp"
        android:gravity="center"
        android:text="FINISH"
        android:textColor="#000"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_reg"
        android:layout_width="300dp"
        android:layout_height="50dp"/>

</LinearLayout>